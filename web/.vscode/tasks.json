{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "vue build",
            "type": "shell",
            "command": "vue",
            "args": [
                "build",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "vue serve",
            "type": "shell",
            "command": "vue",
            "args": [
                "serve",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        }
    ]
}